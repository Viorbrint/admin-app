<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <button class="btn btn-outline-primary me-2" @onclick="OnBlock">Block</button>
        <button class="btn btn-outline-primary me-2" @onclick="OnUnblock">Unblock</button>
        <button class="btn btn-outline-danger" @onclick="OnDelete">Delete</button>
    </div>
    <div class="input-group d-flex justify-content-between align-items-center mb-3" style="gap: 0.4em; max-width: 250px;">
        <input type="text" class="form-control" placeholder="Search..." @bind="FilterQuery" />
        <button class="btn btn-outline-dark ms-2" @onclick="LogoutAction">Logout</button>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnBlock { get; set; }
    [Parameter] public EventCallback OnUnblock { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public EventCallback LogoutAction { get; set; }
    [Parameter] public string FilterQuery { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> FilterQueryChanged { get; set; }
}
