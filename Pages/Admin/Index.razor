@page "/"

<PageTitle>AdminApp</PageTitle>

<section style="background-color: #f5f5f5;">
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-xl-12">
        <div class="card rounded-3 shadow-sm">
          <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
            <h4 class="m-0">User Management Panel</h4>
            <button class="btn btn-outline-light" @onclick="Logout">Logout</button>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="d-flex">
                <button class="btn btn-danger" @onclick="BlockSelectedUsers">Block</button>
                <button class="btn btn-success" @onclick="UnblockSelectedUsers">Unblock</button>
                <button class="btn btn-outline-danger" @onclick="DeleteSelectedUsers">Delete</button>
              </div>
              <div class="input-group" style="max-width: 250px;">
                <span class="input-group-text bg-light border-0"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Search users..." @bind="FilterQuery" />
              </div>
            </div>
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th scope="col"><input type="checkbox" @onclick="SelectAllUsers"></th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Last Seen</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var user in filteredUsers)
                {
                    <tr class="@GetRowClass(user)">
                      <td><input type="checkbox" @bind="user.IsSelected"></td>
                      <td>@user.Name</td>
                      <td>@user.Email</td>
                      <td>@user.LastSeen</td>
                    </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
